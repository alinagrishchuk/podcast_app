<div id="podcast_show">
  <%= render 'podcasts/podcast_banner',  podcast: @podcast %>

  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
        All Podcasts
        <span>/</span>
        <%= link_to @podcast.title, podcast_path(@podcast) %>
        <span>/</span>
        <%= @episode.title %>
    <% end %>
  </div>

  <div id="episode_content" data-src="<%= @episode.mp3.url %>">
    <div class="wrapper_skinny">
      <%= image_tag @episode.episode_thumbnail.url(:medium), class: "current_episode_thumbnail" %>
      <h2><%= @episode.title %></h2>
      <p class="description"><%= @episode.description %></p>
      <div class="links">
        <% @episode.tags.each do |t| %>
            <a><%= t.name %></a>
        <% end %>
      </div>
      <%= render 'player' %>
    </div>
  </div>

  <%= render 'episodes/episodes' %>

</div>


