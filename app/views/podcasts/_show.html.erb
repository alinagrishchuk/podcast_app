<div id="podcast_show">
  <%= render 'podcasts/podcast_banner',  podcast: @podcast %>

  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
        All Podcasts
        <span>/</span>
        <%= @podcast.title %>
    <% end %>
  </div>

  <section class="main-tags">
    <div class="links center">
      <% @podcast.tags.each do |t| %>
          <%= link_to "##{t.name} #{t.count}", podcast_path(@podcast, tag: t.name) %>
      <% end %>
    </div>
  </section>

  <% unless @tag.blank? %>
    <h3 class="sub_title"><%= "Search for ##{@tag}"%> <%= link_to "Clear", podcast_path(@podcast), class: "links" %></h3>
  <% end %>

  <%= render 'episodes/episodes' %>
</div>