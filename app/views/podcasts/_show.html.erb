<div id="podcast_show">
  <%= render 'podcasts/podcast_banner',  podcast: @podcast %>

  <div id="breadcrumb">
    <%= link_to podcasts_path do %>
        All Podcasts
        <span>/</span>
        <%= @podcast.title %>
    <% end %>
  </div>

  <% unless @tag.blank? %>
    <h3 class="sub_title"><%= "Search for #{@tag}"%></h3>
  <% end %>

  <%= render 'episodes/episodes' %>
</div>